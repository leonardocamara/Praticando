<script>
    function id_verifcar1() {
        var cpu = input_cpu.value.toUpperCase();
        if (cpu == "CPU") {
            alert("Resposta correta ;)")
            a1.value = 'C';
            a2.value = 'P';
            a3.value = 'U';
        }
        else {
            alert("Resposta incorreta :(")
        }
    }

    function id_verifcar2() {
        var ula = input_ula.value.toUpperCase();
        if (ula == "ULA") {
